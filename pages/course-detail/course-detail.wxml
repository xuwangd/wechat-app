    <view class="help">
      <image class="service" src="../../assets/temp/index-banner.png"></image>
      <image class="collect" src="../../assets/temp/index-banner.png"></image>
    </view>
    <view class="btn">
      <view class="span">购买课程</view>
    </view>
  </view>
</view>