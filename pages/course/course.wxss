/* pages/course/course.wxss */
page{
  background-color: #fff;
}
/*  */
.searchbar{
  background-color:#f28e26;
}
.searchbar .weui-search-bar__cancel-btn{
  color:#fff;
}
/*  */
.swiper{
  height:260rpx;
}
.swiper .swiper-item{
  
}
.swiper .swiper-item .banner{
  width:100%;
  height:260rpx;
  object-fit: cover;
}
/*  */
.course-list{
  padding: 20rpx;
  overflow:hidden;
}
.course-list .row{
  margin-left:-15rpx;
  margin-right:-15rpx;
  display:flex;
  flex-wrap:wrap;
}
.course-list .row .col{
  margin:0 15rpx;
  width:340rpx;
}
.course-list .row .col .col-cover{
  width:340rpx;
  border-radius:30rpx;
  overflow:hidden;
}
.course-list .row .col .col-cover .image{
  width:100%;
  height:220rpx;
  object-fit:cover;
}
.course-list .row .col .col-body .col-meta{}
.course-list .row .col .col-body .col-meta .col-detail{
  padding:10rpx 10rpx 20rpx;
  font-weight:bold;
}
.course-list .row .col .col-body .col-meta .col-detail .col-title{
  width:100%;
  margin-bottom:10rpx;
  color:#000;
  font-size:25rpx;
  white-space: wrap;
}
.course-list .row .col .col-body .col-meta .col-detail .col-desc{
  color:#FE0200;
}
.course-list .row .col .col-body .col-meta .col-detail .col-desc .span-left{
  float:left;
  font-size:22rpx;
}
.course-list .row .col .col-body .col-meta .col-detail .col-desc .span-right{
  float:right;
  font-size:28rpx;
}