/* pages/course-buy/course-buy.wxss */
page{
  background-color:#fff;
}
.container{
  margin:40rpx 20rpx 120rpx;
}
/*  */
.header{
  display:flex;
  align-items:center;
  border-radius:30rpx;
  background-color:#fff;
}
.header .poster{
  width:200rpx;
  height:200rpx;
  border-radius:30rpx;
}
.header .div{
  flex:1;
  margin-left:30rpx;
}
.header .div .course-name{
  font-size:26rpx;
  color:#000;
}
.header .div .p{
  margin-top:6rpx;
  font-size:20rpx;
  color:#6A6A6A;
}
.header .div .tags{
  margin-top:6rpx;
}
.header .div .tags .tag{
  display:inline-block;
  padding:0 10rpx;
  margin:10rpx 0;
  margin-right:8rpx;
  border:2rpx solid #E4E4E4;
  border-radius:15rpx;
  font-size:18rpx;
  color:#6A6A6A;
}
.header .div .desc{
  margin-top:6rpx;
}
.header .div .desc .span1{
  font-size:20rpx;
}
.header .div .desc .span2{
  margin-top:6rpx;
  font-size:24rpx;
  color:#F70201;
  font-weight:bold;
}
.cells{
  
}
.cells .cell{
  display:flex;
  align-items:center;
  padding-left:28rpx;
  padding-right:28rpx;
  margin-top:54rpx;
}
.cells .cell .label{
  font-size:26rpx;
  color:#000;
  font-weight:bold;
}
.cells .cell .p.bold{
  font-weight:bold;
  color:#000;
}
.cells .cell .p{
  font-size:22rpx;
  color:#CBCBCB;
  text-align:right;
  flex:1;
}
.cells .cell .icon{
  width:26rpx;
  height:26rpx;
  object-fit:cover;
  margin-left: 10rpx;
}
/*  */
.footer{
  position: fixed;
  left:0;
  bottom:0;
  width:100%;
  padding:30rpx;
  box-sizing: border-box;
}
.footer .price{
  float:left;
  margin-top:12rpx;
  font-size:28rpx;
  color:#FF0202;
  font-weight: bold;
}
.footer .btn{
  float:right;
}
.footer .btn .span{
  width:200rpx;
  height:60rpx;
  font-size:26rpx;
  color:#fff;
  font-weight:bold;
  background-color:#F39A3C;
  text-align:center;
  line-height: 60rpx;
  border-radius:30rpx;
}
/*  */
.weui-half-screen-dialog {
  max-height:90%!important;
}
.weui-half-screen-dialog .title{
  padding:30rpx 40rpx;
  box-shadow: 0 2rpx 6rpx 0 rgb(0 0 0 / 12%), 0 0 6rpx 0 rgb(0 0 0 / 4%);
}
.weui-half-screen-dialog .title .h2{
  float:left;
  font-size:34rpx;
  color:#000;
}
.weui-half-screen-dialog .title .close{
  float:right;
}
.weui-half-screen-dialog .title .close .span{
  margin-right:30rpx;
  display:inline-block;
  vertical-align: middle;
  font-size:24rpx;
  color:#636363;
}
.weui-half-screen-dialog .title .close .icon{
  display:inline-block;
  vertical-align: middle;
  width:40rpx;
  height:40rpx;
}
/*  */
.weui-half-screen-dialog{
  padding-left:0!important;
  padding-right:0!important;
}
.weui-half-screen-dialog .weui-half-screen-dialog__hd{
  height:auto!important;
}
.weui-half-screen-dialog .weui-half-screen-dialog__bd{
  padding: 0!important;
}
.weui-half-screen-dialog .weui-half-screen-dialog__ft{
  padding-left:0!important;
  padding-right:0!important;
}
.weui-half-screen-dialog .footer{
  text-align:left;
  
}
.weui-half-screen-dialog .footer .scroll-container{
  max-height:832rpx;
  overflow: auto;
}
.weui-half-screen-dialog .footer .invoice-type,
.weui-half-screen-dialog .footer .invoice-content,
.weui-half-screen-dialog .footer .invoice-title,
.weui-half-screen-dialog .footer .receiver-info,
.weui-half-screen-dialog .footer .company-info{
  border-bottom:1rpx solid #eee;
  padding:0 40rpx;
}
.weui-half-screen-dialog .footer .invoice-content>.tips{
  color:#C6C6C6;
  font-size:24rpx;
  margin-bottom: 30rpx;
}
.weui-half-screen-dialog .footer .invoice-type .h2,
.weui-half-screen-dialog .footer .invoice-content .h2,
.weui-half-screen-dialog .footer .invoice-title .h2,
.weui-half-screen-dialog .footer .receiver-info .h2{
  margin-top:30rpx;
}
.weui-half-screen-dialog .footer .invoice-type .h2 .span,
.weui-half-screen-dialog .footer .invoice-content .h2 .span,
.weui-half-screen-dialog .footer .invoice-title .h2 .span,
.weui-half-screen-dialog .footer .receiver-info .h2 .span{
  font-size:26rpx;
  color:#000;
  display: inline-block;
  font-weight:bold;
}
.weui-half-screen-dialog .footer .invoice-content .h2>.tips{
  color:#C6C6C6;
  font-size:24rpx;
  display: inline;
  padding-left: 30rpx;
}
.weui-half-screen-dialog .footer .invoice-type .radio-group,
.weui-half-screen-dialog .footer .invoice-content .radio-group,
.weui-half-screen-dialog .footer .invoice-title .radio-group{
  padding-bottom:30rpx;
}
.weui-half-screen-dialog .footer .invoice-type .radio-group .radio,
.weui-half-screen-dialog .footer .invoice-content .radio-group .radio,
.weui-half-screen-dialog .footer .invoice-title .radio-group .radio{
  float:left;
  height:60rpx;
  line-height:60rpx;
  padding:0 30rpx;
  margin-right:20rpx;
  font-size:22rpx;
  color:#000;
  background-color:#C8C8C8;
  border-radius:30rpx;
  margin-top: 30rpx;
}
.weui-half-screen-dialog .footer .invoice-type .radio-group .radio.active,
.weui-half-screen-dialog .footer .invoice-content .radio-group .radio.active,
.weui-half-screen-dialog .footer .invoice-title .radio-group .radio.active{
  background-color:#F39A3C;
  color:#fff;
}
.weui-half-screen-dialog .footer .cell{
  display:flex;
  align-items:center;
  margin: 20rpx 0;
}
.weui-half-screen-dialog .footer .cell .label{
  padding-right:50rpx;
  font-size:24rpx;
  color:#000;
  line-height: 30rpx;
  font-weight:bold;
}
.weui-half-screen-dialog .footer .cell .inp{
  flex:1;
  height:30rpx;
  font-size:24rpx;
  color:#000;
}
.weui-half-screen-dialog .footer .cell .input-placeholder{
  color:#C6C6C6;
}
.weui-half-screen-dialog .footer .cell .input-placeholder--color{
  color:#F60011;
}
.weui-half-screen-dialog .footer .btn{
  padding-top:20rpx;
  padding-bottom:20rpx;
  box-shadow: 0 -2rpx 6rpx 0 rgb(0 0 0 / 12%), 0 0 6rpx 0 rgb(0 0 0 / 4%);
}
.weui-half-screen-dialog .footer .btn .span{
  width:600rpx;
  height:60rpx;
  margin:0 auto;
  border-radius:30rpx;
  line-height: 60rpx;
  font-size:28rpx;
  color:#fff;
  text-align:center;
  background-color:#F39A3C;
}