    <view class="txt">推荐商品</view>
    <view class="border"></view>
  </view>
  <view class="recommend-list">
    <view class="row">
      <view class="col" wx:for="{{ hotList }}" wx:key="*this">
        <image class="poster" src="{{ item }}"></image>
        <view class="detail">
          <view class="trade-name xft-multi-ellipsis--l2">某某商品 某某商品某某商品某某商品某某商品某某商品某某商品</view>
          <view class="p">
            <view class="month-sales">月售100</view>
            <view class="count-down">剩余时间：12：55：55</view>
          </view>
          <view class="pickup-location xft-multi-ellipsis">自提点：红旗大街 红旗大街红旗大街</view>
        </view>
        <view class="right">
          <view class="price">
            <view class="origin-price">1000元</view>
            <view class="current-price">600元</view>
          </view>
          <view class="buy-btn">立即购买</view>
