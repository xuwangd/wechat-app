<!-- pages/mall/mall.wxml -->
<!--  -->
<mp-searchbar placeholder="课程" value="{{ queryParams.courseName }}" bindclear="handlerClear" bindinput="handlerInput"></mp-searchbar>
<!--  -->
<swiper class="swiper" indicator-dots="{{ indicatorDots }}" autoplay="{{ autoplay }}" interval="{{ interval }}" duration="{{ duration }}">
  <block wx:for="{{ bannerList }}" wx:key="*this">
    <swiper-item class="swiper-item">
      <view>
        <image class="banner" src="{{ item }}"></image>
      </view>
    </swiper-item>
  </block>
</swiper>
<!--  -->
<view class="activity-area">
  <view class="activity-list">
    <view class="row">
      <view class="col" wx:for="{{ activityList }}" wx:key="*this">
        <image class="vouchers" src="{{ item }}"></image>
      </view>
    </view>
  </view>
</view>
<!--  -->
<view class="nav-area">
  <view class="nav-list">
    <view class="row">
      <view class="col" wx:for="{{ navList }}" wx:key="*this">
        <image class="icon" src="{{ item.icon }}"></image>
        <view class="txt xft-multi-ellipsis">{{ item.text }}</view>
      </view>
    </view>
  </view>
</view>
<!--  -->
<view class="hot-area">
  <view class="title">
    <view class="txt">热门活动</view>
    <view class="border"></view>
  </view>
  <view class="hot-list">
    <view class="row">
      <view class="col" wx:for="{{ hotList }}" wx:key="*this">
        <image class="poster" src="{{ item }}"></image>
      </view>
    </view>
  </view>
</view>
<!--  -->
